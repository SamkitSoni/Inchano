{
  "name": "relayer-service",
  "version": "1.0.0",
  "description": "A TypeScript Node.js relayer service for DeFi operations",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "watch": "nodemon --exec ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rimraf dist",
    "demo": "ts-node src/demo/escrow-demo.ts",
    "demo:build": "npm run build && node dist/demo/escrow-demo.js",
    "demo:cardano": "ts-node src/demo/cardano-escrow-demo.ts",
    "demo:cardano:build": "npm run build && node dist/demo/cardano-escrow-demo.js",
    "demo:api": "ts-node src/demo/api-demo.ts",
    "demo:api:build": "npm run build && node dist/demo/api-demo.js",
    "demo:websocket": "ts-node src/demo/websocket-demo.ts",
    "demo:websocket:build": "npm run build && node dist/demo/websocket-demo.js"
  },
  "keywords": [
    "relayer",
    "defi",
    "typescript",
    "nodejs",
    "blockchain"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "nodemon": "^3.0.0",
    "rimraf": "^5.0.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@1inch/fusion-sdk": "2.1.11-rc.2",
    "@types/cors": "^2.8.0",
    "@types/express": "^4.17.0",
    "@types/ws": "^8.18.1",
    "alchemy-sdk": "^3.6.2",
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "ethers": "^5.7.2",
    "express": "^4.18.0",
    "prom-client": "^15.1.3",
    "uuid": "^11.1.0",
    "winston": "^3.8.0",
    "ws": "^8.18.3"
  }
}
